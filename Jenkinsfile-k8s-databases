pipeline {
    agent {
        label "K8S"
    }

    stages {

        stage('Install Helm Repo') {
            steps {
                sh '''
                    helm repo add bitnami https://charts.bitnami.com/bitnami
                    helm repo add stable https://charts.helm.sh/stable
                    helm repo update
                '''
            }
        }

        stage('Deploy MongoDB Helm Chart') {
            steps {
                sh '''
                    helm upgrade -i mongodb bitnami/mongodb --set auth.enabled=false
                '''
            }
        }

        stage('Deploy RabbitMQ Helm Chart') {
            steps {
                sh '''
                    helm upgrade -i rabbitmq stable/rabbitmq --set auth.username=roboshop --set auth.password=roboshop123
                '''
            }
        }

        stage('Deploy Redis Helm Chart') {
            steps {
                sh '''
                    helm upgrade -i redis bitnami/redis
                '''
            }
        }

        stage('Deploy MySQL Helm Chart') {
            steps {
                sh '''
                    helm upgrade -i mysql bitnami/mysql
                '''
            }
        }

    }

    post {
        always {
            cleanWs()
        }
    }
}

